# Router API Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Sheets Configuration
# =============================================================================

# Google Sheet ID (found in the URL of your Google Sheet)
# Example: https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Sheet page/worksheet name
# This is the name of the specific worksheet/tab in your Google Sheet
GOOGLE_SHEET_PAGE=Sheet1

# Google Sheets credentials (base64 encoded)
# To encode your credentials.json file: base64 -i credentials.json | tr -d '\n'
GOOGLE_CREDENTIALS=your_base64_encoded_credentials_here

# =============================================================================
# Remna API Configuration
# =============================================================================

# Remna API base URL
# The base URL of your Remna proxy service instance
REMNA_BASE_URL=https://your-remna-instance.com

# Remna API token
# Your Remna API authentication token
REMNA_TOKEN=your_remna_api_token_here

# Remna user tag
# Tag to assign to created users (used for organization/filtering)
REMNA_TAG=default_tag

# Remna user status
# Default status for newly created users (usually "active" or "inactive")
REMNA_DEFAULT_STATUS=active

# Remna inbound configuration
# The inbound configuration ID to use for user creation
REMNA_INBOUND=default_inbound

# =============================================================================
# Application Configuration
# =============================================================================

# Days to add to expiration date
# Number of days to add to current date for user expiration
# Default: 365 (1 year)
DAYS_TO_ADD=365
